<h1>Funcionários</h1>

<table>
  <tr>
    <th>Código</th>
    <th>Nome</th>
    <th>Telefone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @funcionarios.each do |funcionario| %>
  <tr>
    <td><%= funcionario.codigo %></td>
    <td><%= funcionario.nome %></td>
    <td><%= funcionario.telefone %></td>
    <td class="acao"><%= link_to image_tag('exibir.png'), funcionario %></td>
    <td class="acao"><%= link_to image_tag('editar.png'), edit_funcionario_path(funcionario) %></td>
    <td class="acao"><%= link_to image_tag('excluir.png'), funcionario, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div class="actions">
    <%= link_to 'Novo', new_funcionario_path %>
</div>
